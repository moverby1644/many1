<h1>Editing Use #<%= @use.id %></h1>

<form action="/uses/<%= @use.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @use.name  %>" type="text" />
  </div>
  <div>
    <label for="email">email</label><br />
    <input id="email" name="email" value="<%= @use.email  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


